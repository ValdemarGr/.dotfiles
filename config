# [CONSTANTS]
set $mod Mod4
floating_modifier $mod
set $term urxvt
set $bg ~/Git/.dotfiles/wp/m.png
set $windowserversock         /tmp/edlav_wnsrv.sock
set $windowserverscript       ~/Git/.dotfiles/Scripts/windowserver.py
set $windowclient             ~/Git/.dotfiles/Scripts/windowclient.py
set $gotowssh                 ~/Git/.dotfiles/Scripts/gotows.sh
set $movewssh                 ~/Git/.dotfiles/Scripts/movews.sh


# [INIT]
for_window [instance="dropdown"] floating enable;
for_window [instance="dropdown"] move scratchpad;
font pango:System San Francisco Display 12

exec --no-startup-id xrandr --newmode "1920x1080_60.00"  173.00  1920 2048 2248 2576  1080 1083 1088 1120 -hsync +vsync
exec --no-startup-id xrandr --addmode eDP-1 1920x1080_60.00
exec --no-startup-id xrandr --output eDP-1 --mode 1920x1080_60.00

exec --no-startup-id i3-msg 'rename workspace to "1: new"'

exec --no-startup-id compton -b -c --vsync opengl
exec --no-startup-id feh --bg-scale $bg

workspace 1 output eDP-1

gaps inner 14
gaps outer 12

bar {
  font pango:Menlo for Powerline 11, FontAwesome 11
	position top
  #tray_output none
  status_command python3 ~/Git/bumblebee-status/bumblebee-status -m spotify nic disk:root cpu memory battery date time pasink pasource -p root.path=/ time.format="%H:%M CW %V" date.format="%a, %b %d %Y" -t gruvbox-powerline
  #status_command i3status
  colors {
    background #1f2733
 
    focused_workspace   #1f2733 #1f2733 #ffffff
    active_workspace  #1f2733 #1f2733 #ffffff
    inactive_workspace  #1f2733 #1f2733 #888888
  }
}

new_window pixel 0

set $FOCUS #525252
set $UNFOCUS #3c3b37

client.focused 			$FOCUS $FOCUS $FOCUS $FOCUS
client.focused_inactive $UNFOCUS $UNFOCUS $UNFOCUS $UNFOCUS
client.unfocused 		$UNFOCUS $UNFOCUS $UNFOCUS $UNFOCUS
client.urgent 			$FOCUS $FOCUS $FOCUS $FOCUS
client.background 		$UNFOCUS

focus_follows_mouse no

exec --no-startup-id python3 $windowserverscript $windowserversock

# [KEYBINDS]
bindsym $mod+u [instance="dropdown"] scratchpad show
bindsym $mod+i exec $term -name dropdown

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec "rofi -combi-modi drun,run -show combi" 

bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l exec --no-startup-id i3lock-fancy
bindsym $mod+ae focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ae move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h

bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent

bindsym $mod+Control+Right workspace next
bindsym $mod+Control+Left workspace prev

bindsym $mod+c exec --no-startup-id python3 $windowclient $windowserversock
bindsym $mod+g exec --no-startup-id python3 $windowclient $windowserversock goto
bindsym $mod+n exec --no-startup-id python3 $windowclient $windowserversock renamews
bindsym $mod+m exec --no-startup-id python3 $windowclient $windowserversock movews

#bindsym $mod+g exec --no-startup-id i3-input -F 'exec "echo "gotows,%s" | nc -U $windowserversock"' -P 'go to workspace: '
#bindsym $mod+n exec --no-startup-id i3-input -F 'exec "echo "renamews,%s" | nc -U $windowserversock"' -P 'rename workspace: '
#bindsym $mod+m exec --no-startup-id i3-input -F 'exec "echo "movews,%s" | nc -U $windowserversock"' -P 'move to workspace: '

bindsym $mod+b exec --no-startup-id i3-input -F 'exec xrandr --output eDP-1 --brightness %s' -P 'set brightness: '

bindsym $mod+1 exec bash $gotowssh $windowserversock 1
bindsym $mod+2 exec bash $gotowssh $windowserversock 2
bindsym $mod+3 exec bash $gotowssh $windowserversock 3
bindsym $mod+4 exec bash $gotowssh $windowserversock 4
bindsym $mod+5 exec bash $gotowssh $windowserversock 5
bindsym $mod+6 exec bash $gotowssh $windowserversock 6
bindsym $mod+7 exec bash $gotowssh $windowserversock 7
bindsym $mod+8 exec bash $gotowssh $windowserversock 8
bindsym $mod+9 exec bash $gotowssh $windowserversock 9
bindsym $mod+0 exec bash $gotowssh $windowserversock 0

bindsym $mod+Shift+1 exec bash $movewssh $windowserversock 1
bindsym $mod+Shift+2 exec bash $movewssh $windowserversock 2
bindsym $mod+Shift+3 exec bash $movewssh $windowserversock 3
bindsym $mod+Shift+4 exec bash $movewssh $windowserversock 4
bindsym $mod+Shift+5 exec bash $movewssh $windowserversock 5
bindsym $mod+Shift+6 exec bash $movewssh $windowserversock 6
bindsym $mod+Shift+7 exec bash $movewssh $windowserversock 7
bindsym $mod+Shift+8 exec bash $movewssh $windowserversock 8
bindsym $mod+Shift+9 exec bash $movewssh $windowserversock 9
bindsym $mod+Shift+0 exec bash $movewssh $windowserversock 0

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ae resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"